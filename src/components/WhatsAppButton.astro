<style>
  /* Multi-layer pulse animations */
  @keyframes pulse-fast {
    0%, 100% { transform: scale(1); opacity: 0.2; }
    50% { transform: scale(1.5); opacity: 0; }
  }

  @keyframes pulse-medium {
    0%, 100% { transform: scale(1); opacity: 0.15; }
    50% { transform: scale(1.75); opacity: 0; }
  }

  @keyframes pulse-slow {
    0%, 100% { transform: scale(1); opacity: 0.1; }
    50% { transform: scale(2); opacity: 0; }
  }

  /* Sparkle animations */
  @keyframes sparkle {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(200%); }
  }

  /* Faster fade in for WhatsApp button */
  @keyframes fade-in {
    0% { opacity: 0; }
    100% { opacity: 1; }
  }

  /* Periodic attention-grabbing animation */
  @keyframes attention {
    0%, 90%, 100% { transform: scale(1); }
    95% { transform: scale(1.1); }
  }

  .animate-fade-in {
    animation: fade-in 0.5s ease-out forwards;
  }

  .animate-pulse-fast {
    animation: pulse-fast 1.5s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }

  .animate-pulse-medium {
    animation: pulse-medium 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }

  .animate-pulse-slow {
    animation: pulse-slow 2.5s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }

  .animate-attention {
    animation: attention 8s ease-in-out infinite;
  }

  .sparkle-1 {
    animation: sparkle 2s linear infinite;
  }

  .sparkle-2 {
    animation: sparkle 2s linear infinite 1s;
  }
</style>